{
  "name": "@siafoundation/next",
  "version": "0.1.3",
  "description": "NextJS wrappers for build compatibility.",
  "license": "MIT",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "run-p bundle type:gen",
    "build:dev": "run-p bundle:watch type:gen:watch",
    "bundle": "tsup src/index.ts --format esm",
    "clean": "del dist tsconfig.tsbuildinfo",
    "coverage": "vitest run --coverage ",
    "lint": "eslint . --max-warnings 0",
    "test": "vitest",
    "type:check": "tsc --noEmit",
    "type:gen": "tsc --emitDeclarationOnly"
  },
  "devDependencies": {
    "@siafoundation/typescript-config": "^0.0.0",
    "@swc/core": "^1.6.13",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "del-cli": "^5.1.0",
    "tsup": "^8.1.0",
    "next": "14.2.5"
  },
  "peerDependencies": {
    "next": "^14.2.5"
  }
}
