{
  "name": "@siafoundation/fonts",
  "version": "0.5.0",
  "description": "Next font configuration for use across apps.",
  "license": "MIT",
  "exports": {
    ".": "./src/index.ts"
  },
  "types": "./src/index.ts",
  "scripts": {
    "build": "run-p bundle type:gen",
    "build:dev": "run-p bundle:watch type:gen:watch",
    "bundle": "tsup src/index.ts --format esm",
    "clean": "del dist tsconfig.tsbuildinfo",
    "coverage": "vitest run --coverage ",
    "lint": "eslint . --max-warnings 0",
    "test": "vitest",
    "type:check": "tsc --noEmit",
    "type:gen": "tsc --emitDeclarationOnly"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0"
  },
  "devDependencies": {
    "@siafoundation/typescript-config": "^0.0.0",
    "@swc/core": "^1.6.13",
    "del-cli": "^5.1.0",
    "tsup": "^8.1.0",
    "next": "14.2.5",
    "react": "18.3.0",
    "react-dom": "18.3.0"
  },
  "peerDependencies": {
    "next": "^14.2.5",
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  }
}
