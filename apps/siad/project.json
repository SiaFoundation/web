{
  "sourceRoot": "apps/siad",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/siad",
        "outputPath": "dist/apps/siad",
        "assets": [
          {
            "glob": "**/*",
            "input": "libs/design-system/src/public/",
            "output": "/"
          }
        ]
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nrwl/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "siad:build",
        "port": 3003,
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "siad:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "siad:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nrwl/next:export",
      "options": {
        "buildTarget": "siad:build:production"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/siad"],
      "options": {
        "jestConfig": "apps/siad/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/siad/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": []
}
