{
  "name": "walletd",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/walletd",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/walletd",
        "assets": [
          {
            "glob": "**/*",
            "input": "libs/design-system/src/public/",
            "output": "/"
          }
        ]
      },
      "configurations": {
        "development": {},
        "production": {},
        "local": {},
        "ci": {
          "outputPath": "apps/walletd/dist"
        },
        "export": {
          "outputPath": "dist/apps/walletd-export",
          "fileReplacements": [
            {
              "replace": "apps/walletd/config/buildMode.ts",
              "with": "apps/walletd/config/buildModeExport.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "walletd:build",
        "port": 3008
      },
      "configurations": {
        "development": {
          "buildTarget": "walletd:build:development",
          "dev": true
        },
        "export": {
          "buildTarget": "walletd:build:export",
          "dev": true
        },
        "production": {
          "buildTarget": "walletd:build:production",
          "dev": false
        }
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "dependsOn": [
        "build"
      ],
      "defaultConfiguration": "local",
      "options": {
        "engine": "docker",
        "context": "./",
        "file": "apps/walletd/Dockerfile"
      },
      "configurations": {
        "local": {
          "tags": [
            "siafoundation/web-walletd:latest"
          ],
          "push": false
        },
        "production": {
          "tags": [
            "ghcr.io/siafoundation/web-walletd:latest"
          ],
          "push": true
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/apps/walletd"
      ],
      "options": {
        "jestConfig": "apps/walletd/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/walletd/**/*.{ts,tsx,js,jsx}"
        ]
      }
    }
  },
  "tags": []
}
