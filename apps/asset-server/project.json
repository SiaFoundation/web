{
  "root": "apps/asset-server",
  "sourceRoot": "apps/asset-server/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/node:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/asset-server",
        "main": "apps/asset-server/src/main.ts",
        "tsConfig": "apps/asset-server/tsconfig.app.json",
        "assets": ["apps/asset-server/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/asset-server/src/environments/environment.ts",
              "with": "apps/asset-server/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:execute",
      "options": {
        "buildTarget": "asset-server:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/asset-server/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/asset-server"],
      "options": {
        "jestConfig": "apps/asset-server/jest.config.js",
        "passWithNoTests": true
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "commitMessageFormat": "chore(${projectName}): release version ${version}",
        "postTargets": ["asset-server:publish-github"]
      }
    },
    "publish-github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notesFile": "./apps/asset-server/CHANGELOG.md"
      }
    }
  },
  "tags": []
}
